<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kurumsal Envanter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <style>
        /* === MODERN TASARIM İÇİN ÖZEL STİLLER === */
        html, body {
            height: 100%;
            overflow: hidden; /* Sayfanın kaymasını engelle */
        }

        .login-container {
            display: flex;
            min-height: 100vh; /* Tüm ekran yüksekliğini kapla */
            width: 100%;
        }

        /* Sol Taraf: Marka ve Logo */
        .branding-side {
            flex: 1; /* Esnek genişlik */
            background: linear-gradient(135deg, #0d6efd 0%, #013a7c 100%); /* Şık bir gradient arkaplan */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center; /* İçeriği dikeyde ortala */
            align-items: center; /* İçeriği yatayda ortala */
            padding: 40px;
            text-align: center;
        }

            .branding-side img {
                max-width: 320px; /* Logo boyutu */
                margin-bottom: 2rem;
                filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3)); /* Logoya gölge efekti */
            }

            .branding-side h1 {
                font-weight: 300; /* Daha ince bir font */
                font-size: 1.75rem;
            }

        /* Sağ Taraf: Giriş Formu */
        .form-side {
            flex: 1;
            background-color: #f8f9fa; /* Açık gri bir arkaplan */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .login-form-inner {
            width: 100%;
            max-width: 420px; /* Formun maksimum genişliği */
        }

        /* Küçük ekranlar için (mobil görünüm) */
        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column; /* Sütunları alt alta diz */
            }

            .branding-side {
                min-height: 250px; /* Mobilde marka alanı için minimum yükseklik */
                flex: none;
            }

            body {
                overflow: auto; /* Mobilde kaydırmaya izin ver */
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Sol taraf: Logo ve Hoş Geldiniz Mesajı -->
        <div class="branding-side">
            <img src="~/img/belbim-logo-yeni.jpg" alt="Belbim Logo" />
            <h1 class="h3">Kurumsal Envanter Yönetim Sistemine Hoş Geldiniz</h1>
        </div>
        <!-- Sağ taraf: Formun render edileceği alan -->
        <div class="form-side">
            <main role="main" class="login-form-inner">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>