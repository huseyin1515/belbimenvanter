@model BelbimEnv.Models.ServerDetailsViewModel
@using BelbimEnv.Models
@using BelbimEnv.Helpers

@{
    ViewData["Title"] = "Cihaz Detayı";
}

<!-- Sayfa Başlığı ve Butonlar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]: <span class="text-primary">@Model.Server.HostDns</span></h1>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-1"></i> Listeye Dön</a>
        @if (User.IsInRole("SuperUser"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Server.Id" class="btn btn-primary"><i class="fas fa-edit me-1"></i> Cihazı Düzenle</a>
        }
    </div>
</div>

<!-- Cihazın Temel Bilgileri (Kartlar) -->
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-primary">Kimlik ve Model Bilgileri</h6></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.Server.Id</dd>
                    <dt class="col-sm-4">Host DNS</dt>
                    <dd class="col-sm-8">@Model.Server.HostDns</dd>
                    <dt class="col-sm-4">IP Adresi</dt>
                    <dd class="col-sm-8">@Model.Server.IpAdress</dd>
                    <dt class="col-sm-4">Model</dt>
                    <dd class="col-sm-8">@Model.Server.Model</dd>
                    <dt class="col-sm-4">Service Tag</dt>
                    <dd class="col-sm-8">@Model.Server.ServiceTag</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-primary">Fiziksel Konum ve Yönetim</h6></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Lokasyon</dt>
                    <dd class="col-sm-8">@Model.Server.Location</dd>
                    <dt class="col-sm-4">Kabin</dt>
                    <dd class="col-sm-8">@Model.Server.Kabin</dd>
                    <dt class="col-sm-4">Kabin U</dt>
                    <dd class="col-sm-8">@Model.Server.KabinU</dd>
                    <dt class="col-sm-4">Yön</dt>
                    <dd class="col-sm-8">@Model.Server.RearFront</dd>
                    <dt class="col-sm-4">iLO/iDRAC IP</dt>
                    <dd class="col-sm-8">@Model.Server.IloIdracIp</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- AĞ BAĞLANTILARI KARTI -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold text-primary"><i class="fas fa-exchange-alt me-1"></i>Ağ Bağlantıları</h6>
        @if (User.IsInRole("SuperUser"))
        {
            <a asp-controller="PortDetaylari" asp-action="Manage" asp-route-id="@Model.Server.Id" class="btn btn-sm btn-success">
                <i class="fas fa-cogs me-1"></i> Portları Yönet
            </a>
        }
    </div>
    <div class="card-body">
        <!-- 1. GİDEN BAĞLANTILAR -->
        <h5 class="mb-3">Bu Cihazdan Çıkan Bağlantılar (@Model.Server.PortDetaylari.Count)</h5>
        @if (Model.Server.PortDetaylari.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="table-light"><tr><th>Port Tipi</th><th>Açıklama</th><th>Hedef Cihaz (Switch)</th><th>Hedef Port</th><th>Durum</th><th class="text-center">İşlemler</th></tr></thead>
                    <tbody>
                        @foreach (var port in Model.Server.PortDetaylari.OrderBy(p => p.Id))
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@port.PortTipi.GetDisplayName()</span></td>
                                <td>@port.Aciklama</td>
                                <td>@port.SwName</td>
                                <td>@port.SwPort</td>
                                <td>
                                    @if (port.LinkStatus?.ToLower() == "up")
                                    {
                                        <span class="badge bg-success">Up</span>
                                    }
                                    else if (port.LinkStatus?.ToLower() == "down")
                                    {

                                        <span class="badge bg-danger">Down</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">@port.LinkStatus</span>
                                    }
                                </td>
                                <td class="text-center"><a asp-controller="PortDetaylari" asp-action="Details" asp-route-id="@port.Id" class="btn btn-sm btn-outline-info" title="Port Detayları"><i class="fas fa-info-circle"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {

            <div class="alert alert-warning">Bu cihazdan çıkan tanımlı bir bağlantı bulunmuyor.</div>
        }

        <hr class="my-4">

        <!-- 2. GELEN BAĞLANTILAR (YENİ EKLENEN BÖLÜM) -->
        <h5 class="mb-3">Bu Cihaza Gelen Bağlantılar (@Model.InboundConnections.Count)</h5>
        @if (Model.InboundConnections.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="table-light"><tr><th>Kaynak Cihaz</th><th>Kaynak Port Açıklaması</th><th>Bu Cihazdaki Port</th><th>Durum</th><th class="text-center">İşlemler</th></tr></thead>
                    <tbody>
                        @foreach (var inbound in Model.InboundConnections.OrderBy(p => p.Server.HostDns))
                        {
                            <tr>
                                <td><strong><a asp-controller="Servers" asp-action="Details" asp-route-id="@inbound.ServerId">@inbound.Server.HostDns</a></strong></td>
                                <td>@inbound.Aciklama</td>
                                <td>@inbound.SwPort</td>
                                <td>
                                    @if (inbound.LinkStatus?.ToLower() == "up")
                                    {
                                        <span class="badge bg-success">Up</span>
                                    }
                                    else if (inbound.LinkStatus?.ToLower() == "down")
                                    {

                                        <span class="badge bg-danger">Down</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">@inbound.LinkStatus</span>
                                    }
                                </td>
                                <td class="text-center"><a asp-controller="PortDetaylari" asp-action="Details" asp-route-id="@inbound.Id" class="btn btn-sm btn-outline-info" title="Kaynak Portun Detayları"><i class="fas fa-info-circle"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {

            <div class="alert alert-info">Bu cihaza bağlı başka bir cihaz bulunmuyor.</div>
        }
    </div>
</div>

@section Styles {
    <style>
        body { background-color: #f8f9fc; }
        .card { border: none; }
        .text-gray-800 { color: #5a5c69 !important; }
    </style>
}