@model BelbimEnv.Models.Server

@{
    ViewData["Title"] = "Yeni Sunucu Oluştur";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="HostDns" class="form-label"></label>
                    <input asp-for="HostDns" class="form-control" />
                    <span asp-validation-for="HostDns" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="IpAdress" class="form-label"></label>
                    <input asp-for="IpAdress" class="form-control" />
                    <span asp-validation-for="IpAdress" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="ServiceTag" class="form-label"></label>
                    <input asp-for="ServiceTag" class="form-control" />
                    <span asp-validation-for="ServiceTag" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="VcenterAdress" class="form-label"></label>
                    <input asp-for="VcenterAdress" class="form-control" />
                    <span asp-validation-for="VcenterAdress" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Cluster" class="form-label"></label>
                    <input asp-for="Cluster" class="form-control" />
                    <span asp-validation-for="Cluster" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="OS" class="form-label"></label>
                    <input asp-for="OS" class="form-control" />
                    <span asp-validation-for="OS" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="IloIdracIp" class="form-label"></label>
                    <input asp-for="IloIdracIp" class="form-control" />
                    <span asp-validation-for="IloIdracIp" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Kabin" class="form-label"></label>
                    <input asp-for="Kabin" class="form-control" />
                    <span asp-validation-for="Kabin" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="RearFront" class="form-label"></label>
                    <input asp-for="RearFront" class="form-control" />
                    <span asp-validation-for="RearFront" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="KabinU" class="form-label"></label>
                    <input asp-for="KabinU" class="form-control" />
                    <span asp-validation-for="KabinU" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="IsttelkomEtiketId" class="form-label"></label>
                    <input asp-for="IsttelkomEtiketId" class="form-control" />
                    <span asp-validation-for="IsttelkomEtiketId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">İptal</a>
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}