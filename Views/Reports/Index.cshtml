@model BelbimEnv.Models.OverallReportViewModel

@{
    ViewData["Title"] = "Raporlama Paneli";
    // GRAFİK İÇİN LOKASYON SAYISINI ÖNCEDEN ALIYORUZ
    var locationCount = Model.PortsByLocation.Count;
}

<!-- Sayfa Başlığı -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<!-- 1. BÖLÜM: Genel Bakış Kartları -->
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2"><div class="card-body"><div class="row g-0 align-items-center"><div class="col"><div class="text-xs fw-bold text-primary text-uppercase mb-1">Toplam Fiziksel Cihaz</div><div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalServers</div></div><div class="col-auto"><i class="fas fa-server fa-2x text-gray-300"></i></div></div></div></div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2"><div class="card-body"><div class="row g-0 align-items-center"><div class="col"><div class="text-xs fw-bold text-info text-uppercase mb-1">Toplam Sanal Makine</div><div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalVirtualMachines</div></div><div class="col-auto"><i class="fas fa-desktop fa-2x text-gray-300"></i></div></div></div></div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2"><div class="card-body"><div class="row g-0 align-items-center"><div class="col"><div class="text-xs fw-bold text-warning text-uppercase mb-1">Toplam Port</div><div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalPorts</div></div><div class="col-auto"><i class="fas fa-network-wired fa-2x text-gray-300"></i></div></div></div></div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2"><div class="card-body"><div class="row g-0 align-items-center"><div class="col"><div class="text-xs fw-bold text-success text-uppercase mb-1">Aktif Portlar (Up)</div><div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalUpPorts</div></div><div class="col-auto"><i class="fas fa-power-off fa-2x text-gray-300"></i></div></div></div></div>
    </div>
</div>

<!-- 2. BÖLÜM: Grafik Alanı -->
<div class="row">
    <!-- SOL TARAF GRAFİKLER -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-primary">Lokasyonlara Göre Port Dağılımı</h6></div>
            <div class="card-body"><canvas id="portsByLocationChart"></canvas></div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-success">İşletim Sistemi Dağılımı (Fiziksel)</h6></div>
            <div class="card-body"><canvas id="osDistributionChart"></canvas></div>
        </div>
    </div>
    <!-- SAĞ TARAF GRAFİKLER -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold" style="color: #6f42c1;">Port Tipleri</h6></div>
            <div class="card-body"><canvas id="portsByTypeChart"></canvas></div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-info">En Yoğun 5 Cluster (VM Sayısı)</h6></div>
            <div class="card-body"><canvas id="topClustersChart"></canvas></div>
        </div>
    </div>
</div>

<!-- 3. BÖLÜM: Cihaz Bazlı Detaylı Döküm Tablosu -->
<div class="card shadow mb-4">
    <div class="card-header py-3"><h6 class="m-0 fw-bold text-danger">Cihaz Bazlı Port Aktiflik Durumu</h6></div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="serverReportsTable">
                <thead><tr><th>Cihaz</th><th class="text-center">Toplam Port</th><th class="text-center">Aktif Port</th><th class="text-center">Pasif Port</th><th>Aktiflik Oranı</th></tr></thead>
                <tbody>
                    @foreach (var r in Model.ServerReports)
                    {
                        <tr>
                            <td><strong><a asp-controller="Servers" asp-action="Details" asp-route-id="@r.ServerId">@r.HostDns</a></strong></td>
                            <td class="text-center">@r.TotalPorts</td>
                            <td class="text-center text-success fw-bold">@r.UpPorts</td>
                            <td class="text-center text-danger fw-bold">@r.DownPorts</td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(r.UpPercentage > 75 ? "bg-success" : (r.UpPercentage > 40 ? "bg-warning" : "bg-danger"))" role="progressbar" style="width: @r.UpPercentage.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)%;"
                                         aria-valuenow="@r.UpPercentage" aria-valuemin="0" aria-valuax="100">
                                        %@r.UpPercentage.ToString("0")
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // RENK PALETİ TANIMLAMASI
            const primaryColor = '#4e73df', successColor = '#1cc88a', infoColor = '#36b9cc', warningColor = '#f6c23e', dangerColor = '#e74a3b', secondaryColor = '#858796', customPurple = '#6f42c1';

            // === GÜNCELLENEN BÖLÜM: Canlı ve çeşitli bir renk paleti ===
            const vibrantPalette = [
                '#4e73df', '#6f42c1', '#1cc88a', '#e74a3b', '#fd7e14', '#f6c23e', '#36b9cc', '#d63384'
            ];

            // Lokasyon grafiği için, lokasyon sayısı kadar renk üret. Palet yetmezse başa döner.
            const locationChartColors = [];
            const locationCount = @locationCount;
            for (let i = 0; i < locationCount; i++) {
                locationChartColors.push(vibrantPalette[i % vibrantPalette.length]);
            }
            // ==========================================================

            // Port Tiplerine Göre Dağılım (Halka)
            new Chart(document.getElementById('portsByTypeChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: @Json.Serialize(Model.PortsByType.Keys),
                    datasets: [{ data: @Json.Serialize(Model.PortsByType.Values), backgroundColor: [customPurple, successColor, infoColor, warningColor, dangerColor, secondaryColor] }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
            });

            // Lokasyonlara Göre Dağılım (Yatay Çubuk) - RENKLER GÜNCELLENDİ
            new Chart(document.getElementById('portsByLocationChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: @Json.Serialize(Model.PortsByLocation.Keys),
                    datasets: [{
                        label: 'Port Sayısı',
                        data: @Json.Serialize(Model.PortsByLocation.Values),
                        backgroundColor: locationChartColors // Artık tek renk değil, renk dizisi kullanılıyor
                    }]
                },
                options: { indexAxis: 'y', responsive: true, maintainAspectRatio: true, plugins: { legend: { display: false } } }
            });

            // İşletim Sistemi Dağılımı (Yatay Çubuk)
            new Chart(document.getElementById('osDistributionChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: @Json.Serialize(Model.OsDistribution.Keys),
                    datasets: [{ label: 'Cihaz Sayısı', data: @Json.Serialize(Model.OsDistribution.Values), backgroundColor: successColor }]
                },
                options: { indexAxis: 'y', responsive: true, maintainAspectRatio: true, plugins: { legend: { display: false } } }
            });

            // En Yoğun Clusterlar (Dikey Çubuk)
            new Chart(document.getElementById('topClustersChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: @Json.Serialize(Model.TopClustersByVmCount.Keys),
                    datasets: [{ label: 'VM Sayısı', data: @Json.Serialize(Model.TopClustersByVmCount.Values), backgroundColor: infoColor }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });
        });
    </script>
}

@section Styles {
    <style>
        /* Modern Tema Stilleri (Aynı kalıyor) */
        body {
            background-color: #f8f9fc;
        }

        .card {
            border: none;
        }

        .border-left-primary {
            border-left: .25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: .25rem solid #1cc88a !important;
        }

        .border-left-info {
            border-left: .25rem solid #36b9cc !important;
        }

        .border-left-warning {
            border-left: .25rem solid #f6c23e !important;
        }

        .border-left-danger {
            border-left: .25rem solid #e74a3b !important;
        }

        .text-xs {
            font-size: .7rem;
        }

        .text-gray-300 {
            color: #dddfeb !important;
        }

        .text-gray-800 {
            color: #5a5c69 !important;
        }

        #serverReportsTable thead {
            background-color: #f8f9fc;
            color: #5a5c69;
            border-bottom: 2px solid #e3e6f0;
        }

        #serverReportsTable th {
            font-weight: 600;
            border: none;
        }

        #serverReportsTable td {
            vertical-align: middle;
        }
    </style>
}