@model IEnumerable<string>

<h5 class="mb-3">1. Adım: Lokasyon Seçin</h5>
<div class="row g-3">
    @if (!Model.Any())
    {
        <div class="col-12"><p class="text-muted">Kabin verisi olan lokasyon bulunamadı.</p></div>
    }
    @foreach (var loc in Model)
    {
        <div class="col-md-4">
            <button type="button" class="btn btn-outline-primary w-100 p-3 location-select-btn" data-location="@loc">
                <i class="fas fa-building fa-2x mb-2"></i><br />
                <strong>@loc</strong>
            </button>
        </div>
    }
</div>