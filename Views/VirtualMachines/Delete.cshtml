@model BelbimEnv.Models.VirtualMachine

@{
    ViewData["Title"] = "Sanal Makine Sil";
}

<h3 class="text-danger">Bu sanal makine kaydını silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.VmName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Host:</dt>
        <dd class="col-sm-10">@Model.Host</dd>
        <dt class="col-sm-2">DNS:</dt>
        <dd class="col-sm-10">@Model.Dns</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>