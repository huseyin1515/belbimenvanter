@model BelbimEnv.Models.PortDetay
@using BelbimEnv.Models
@using BelbimEnv.Helpers

@{
    ViewData["Title"] = "Port Detayı";
    var targetDevice = ViewData["TargetDevice"] as Server;
    string macWwpnValue = Model.PortTipi switch
    {
        PortTipiEnum.FC => Model.FiberMAC,
        PortTipiEnum.VirtualFC => Model.FiberMAC,
        PortTipiEnum.Bakir => Model.BakirMAC,
        PortTipiEnum.VirtualBakir => Model.BakirMAC,
        PortTipiEnum.FiberForSAN => Model.Wwpn,
        _ => "N/A"
    };
    string macWwpnLabel = Model.PortTipi switch
    {
        PortTipiEnum.FC => "Fiber MAC",
        PortTipiEnum.VirtualFC => "Fiber MAC",
        PortTipiEnum.Bakir => "Bakır MAC",
        PortTipiEnum.VirtualBakir => "Bakır MAC",
        PortTipiEnum.FiberForSAN => "WWPN",
        _ => "MAC/WWPN"
    };
}

<!-- Sayfa Başlığı ve Butonlar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <p class="mb-0 text-muted">@Model.Aciklama</p>
    </div>
    <div>
        <a asp-controller="Servers" asp-action="Details" asp-route-id="@Model.ServerId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Sunucu Detayına Dön
        </a>
        @if (User.IsInRole("SuperUser"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Bu Portu Düzenle
            </a>
        }
    </div>
</div>

<!-- 1. BÖLÜM: Port Detayları (İki Sütunlu Kartlar) -->
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-primary">Fiziksel Port Bilgileri</h6></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Port Tipi</dt>
                    <dd class="col-sm-7"><span class="badge bg-info text-dark fs-6">@Model.PortTipi.GetDisplayName()</span></dd>
                    <dt class="col-sm-5">@macWwpnLabel</dt>
                    <dd class="col-sm-7"><code>@macWwpnValue</code></dd>
                    <dt class="col-sm-5">NIC ID</dt>
                    <dd class="col-sm-7">@(Model.NicId ?? "-")</dd>
                    <dt class="col-sm-5">Port ID</dt>
                    <dd class="col-sm-7">@(Model.PortId ?? "-")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3"><h6 class="m-0 fw-bold text-primary">Bağlantı ve Switch Bilgileri</h6></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Link Durumu</dt>
                    <dd class="col-sm-7">
                        @if (Model.LinkStatus?.ToLower() == "up")
                        {
                            <span class="badge bg-success fs-6">Up</span>
                        }
                        else if (Model.LinkStatus?.ToLower() == "down")
                        {

                            <span class="badge bg-danger fs-6">Down</span>
                        }
                        else
                        {

                            <span class="badge bg-secondary fs-6">@Model.LinkStatus</span>
                        }
                    </dd>
                    <dt class="col-sm-5">Link Hızı</dt>
                    <dd class="col-sm-7">@(Model.LinkSpeed ?? "-") Mbps</dd>
                    <dt class="col-sm-5">Switch Adı</dt>
                    <dd class="col-sm-7">@(Model.SwName ?? "-")</dd>
                    <dt class="col-sm-5">Switch Port</dt>
                    <dd class="col-sm-7">@(Model.SwPort ?? "-")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- 2. BÖLÜM: Bağlantı Şeması -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 fw-bold text-primary"><i class="fas fa-project-diagram me-1"></i>Bağlantı Şeması</h6>
    </div>
    <div class="card-body">
        <div class="connection-schema">
            <!-- Kaynak Cihaz -->
            <div class="device-box source">
                <div class="device-header"><i class="fas fa-server me-2"></i>Kaynak Cihaz</div>
                <div class="device-body">
                    <strong><a asp-controller="Servers" asp-action="Details" asp-route-id="@Model.ServerId">@Model.Server.HostDns</a></strong>
                    <small class="text-muted d-block">@Model.Server.Model</small>
                    <hr class="my-2">
                    <div class="port-info"><span>Port ID: @(Model.PortId ?? "-")</span><span>NIC: @(Model.NicId ?? "-")</span></div>
                </div>
            </div>
            <!-- Bağlantı Oku -->
            <div class="connection-link">
                <div class="cable-type">@Model.PortTipi.GetDisplayName()</div>
                <div class="arrow"></div>
                <div class="speed-info">
                    @if (Model.LinkStatus?.ToLower() == "up")
                    {
                        <i class="fas fa-check-circle text-success"></i>
                    }
                    else if (Model.LinkStatus?.ToLower() == "down")
                    {

                        <i class="fas fa-times-circle text-danger"></i>
                    }
                    else
                    {

                        <i class="fas fa-question-circle text-muted"></i>
                    }
                    @Model.LinkSpeed Mbps
                </div>
            </div>
            <!-- Hedef Cihaz -->
            <div class="device-box target @(targetDevice == null ? "unknown" : "")">
                <div class="device-header"><i class="fas fa-ethernet me-2"></i>Hedef Cihaz (Switch)</div>
                <div class="device-body">
                    @if (targetDevice != null)
                    {
                        <strong><a asp-controller="Servers" asp-action="Details" asp-route-id="@targetDevice.Id">@targetDevice.HostDns</a></strong>
                        <small class="text-muted d-block">@targetDevice.Model</small>
                        <hr class="my-2">
                        <div class="port-info"><span>Port: @(Model.SwPort ?? "-")</span></div>
                    }
                    else
                    {
                        <strong>@(Model.SwName ?? "Bilinmiyor")</strong>
                        <small class="text-muted d-block">(Bu cihaz envanterde bulunamadı)</small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <style>
        /* Modern Tema Stilleri */
        body {
            background-color: #f8f9fc;
        }

        .card {
            border: none;
        }

        .text-gray-800 {
            color: #5a5c69 !important;
        }

        /* Bağlantı Şeması Stilleri */
        .connection-schema {
            display: flex;
            align-items: center;
            justify-content: space-around;
            padding: 1.5rem;
            gap: 1rem;
        }

        .device-box {
            flex: 1;
            border: 1px solid #e3e6f0;
            border-radius: .35rem;
            background-color: #fff;
            box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15) !important;
            max-width: 400px;
        }

        .device-header {
            padding: .75rem 1.25rem;
            font-weight: bold;
            border-bottom: 1px solid #e3e6f0;
        }

        .device-box.source .device-header {
            background-color: #f8f9fc;
            color: #4e73df;
        }

        .device-box.target .device-header {
            background-color: #f8f9fc;
            color: #1cc88a;
        }

        .device-box.target.unknown .device-header {
            background-color: #f8f9fc;
            color: #f6c23e;
        }

        .device-body {
            padding: 1.25rem;
        }

        .port-info {
            font-size: .8em;
            color: #858796;
            display: flex;
            justify-content: space-between;
        }

        .connection-link {
            text-align: center;
            position: relative;
            flex-shrink: 0;
            width: 150px;
        }

        .cable-type {
            font-weight: bold;
            margin-bottom: 5px;
            font-size: .9em;
        }

        .arrow {
            height: 3px;
            background-color: #858796;
            position: relative;
        }

            .arrow::after {
                content: '';
                position: absolute;
                right: -1px;
                top: -5px;
                border-top: 7px solid transparent;
                border-bottom: 7px solid transparent;
                border-left: 10px solid #858796;
            }

        .speed-info {
            font-size: .8em;
            color: #858796;
            margin-top: 5px;
        }
    </style>
}