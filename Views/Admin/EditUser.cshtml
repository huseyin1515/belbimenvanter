@model BelbimEnv.Models.EditUserViewModel
@{
    ViewData["Title"] = "Kullanıcı Rolünü Düzenle";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Kullanıcı Adı:</dt>
            <dd class="col-sm-8">@Model.Username</dd>
            <dt class="col-sm-4">Ad Soyad:</dt>
            <dd class="col-sm-8">@Model.FullName</dd>
            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>

        <form asp-action="EditUser" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label fw-bold"></label>
                <select asp-for="Role" asp-items="@Model.Roles" class="form-select"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rolü Güncelle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>