@model BelbimEnv.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_LayoutAccount"; // Özel, menüsüz bir layout kullanacağız
}

<div class="text-center">
    <i class="fas fa-server fa-3x text-primary mb-3"></i>
    <h1 class="h3 mb-3 fw-normal">Kurumsal Envanter Sistemi</h1>
    <p class="text-muted">Lütfen devam etmek için giriş yapın.</p>
</div>

<form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-floating mb-3">
        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" required />
        <label asp-for="Username"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Password" type="password" class="form-control" placeholder="Parola" required />
        <label asp-for="Password"></label>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
            <input class="form-check-input" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe"></label>
        </div>
        @*<a href="#" class="small">Parolamı unuttum</a>*@
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
</form>

<div class="text-center mt-4">
    <p class="text-muted">Hesabınız yok mu? <a asp-action="Register">Hemen bir tane oluşturun</a>.</p>
</div>